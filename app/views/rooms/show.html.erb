<div class="main">
  <div class="main-chat">
    <h1>
      <%= @room.name %>
    </h1>

    <div class="row chat">
        <div class="col s12" data-channel-subscribe="room" data-room-id="<%= @room.id %>">
          <% @room_messages.each do |message| %>
            <%
=begin%>
 <% if message.user_id == current_user.id %>
              <div class="your_each_message ">      
                <div class="your_message valign-wrapper">
                  <p data-role="message-text"><%= message.message %></p><br>
                </div>
                <img src="<%= message.user.gravatar_url%>" class="your-message-avatar circle" data-role="user-avatar">
              </div>
            <% else %> 
<%
=end%>
              <div data-role="message-template" class="each_message">
                <img src="<%= message.user.gravatar_url%>" class="message-avatar circle" data-role="user-avatar">
                <div class="message valign-wrapper">
                  <p data-role="message-text"><%= message.message %></p><br>
                </div>
              </div>
            <%
=begin%>
 <% end %>
            <div style='clear:both'></div> 
<%
=end%>
          <%end%>
        </div>
    </div>

    <div class="form">
      <div class="col s12">
        <%= form_for @room_message, remote: true, class: "comment-form" do |f|%>
          <%=f.text_area :message, class: "input-field message-input inline" %>
          <%=f.submit "SEND", :class => "btn message-btn" %>

          <%=f.hidden_field :user_id, :value => current_user.id %>
          <%=f.hidden_field :room_id %>
        <%end%>
      </div>
    </div>
  </div>
</div>